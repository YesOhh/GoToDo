{{define "flash"}}
    {{if .flash}}
<div class="row">
    <div class="col-md-6 mx-auto mt-auto">
        <div class="alert alert-{{.flash.tag}}">
            <button type="button" class="close" data-dismiss="alert">&times;</button>
            {{.flash.message}}
        </div>
    </div>
</div>
        {{end}}
{{end}}